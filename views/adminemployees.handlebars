<div class="container my-5">
    <div class="row">
        <div class="col-md-4 col-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="text-center">Employees</h2>
                </div>
                <div class="card-body p-0 h-90">
                    <div id='employee-list'>
                        {{#each users}}
                        <div class="d-flex justify-content-between my-2 p-2 item w-95 mx-auto ">
                            <div data-f_name="{{dataValues.first_name}}" data-l_name="{{dataValues.last_name}}"
                                data-mob="{{dataValues.mobile}}" data-off="{{dataValues.office_number}}"
                                data-email="{{dataValues.email}}" data-rolid="{{dataValues.RoleId}}"
                                class="font-weight-bold" id='user-{{dataValues.id}}'>
                                {{dataValues.first_name}} {{dataValues.last_name}}
                            </div>
                            <div>
                                <a href="#" class="d-inline-block px-2 edit" id="edit-{{dataValues.id}}"><i
                                        class="fas fa-edit"></i></a>
                                <a href="#" class="d-inline-block px-2 text-danger delete"
                                    id='delete-{{dataValues.id}}'><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-8 col-12">
            <div class="card mb-5">
                <div class="card-header">
                    <h2>Employee Manager</h2>
                </div>
                <div class="card-body">

                    <form id="new-user">

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="first_name">First Name</label>
                                <input type="text" class="form-control" id="inputFirstName" placeholder="First Name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="last_name">Last Name</label>

                                <input type="text" class="form-control" id="inputLastName" placeholder="Last Name">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address</label>

                            <input type="email" class="form-control" id="inputEmail" placeholder="f_name@abc.com">
                        </div>
                        <div class="form-group">
                            <label for="mobile">Mobile Number</label>
                            <input type="tel" class="form-control" id="inputMobile" placeholder="04x xxxx xxxx">
                        </div>
                        {{!-- <div class="form-group">
                            <label for="starting_date">Starting Date</label>
                            <input type="datetime-local" class="form-control" id="inputStartingDate" placeholder="">
                        </div> --}}
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="office_number">Office Number</label>
                                <input type="text" class="form-control" id="inputOfficeNumber" placeholder="xxxx">

                            </div>
                            <div class="form-group col-md-4">
                                <label for="role">Role</label>
                                <select id="inputRole" class="form-control">

                                    {{#each roles}}
                                    <option value="{{this.dataValues.id}}">{{this.dataValues.title}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" id='submit'>Submit</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

